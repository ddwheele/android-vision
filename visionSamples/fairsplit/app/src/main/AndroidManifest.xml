<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.gms.samples.vision.ocrreader"
    android:installLocation="auto">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name=
        "android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission-sdk-23 android:maxSdkVersion="26"
        android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="Fair Split"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="ocr" />

        <activity
            android:name="com.google.android.gms.samples.vision.fairsplit.ocr.OcrCaptureActivity"
            android:label="Fair Split">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.google.android.gms.samples.vision.fairsplit.VerifyPricesActivity" />
        <activity
            android:name="com.google.android.gms.samples.vision.fairsplit.SelectPayersActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name="com.google.android.gms.samples.vision.fairsplit.AssignPayersActivity" />
        <activity android:name="com.google.android.gms.samples.vision.fairsplit.DisplayPayerTotalsActivity"></activity>
    </application>

</manifest>